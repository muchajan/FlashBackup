<Window x:Class="CCTVBackup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CCTV Backup" Height="300" Width="400" WindowStartupLocation="CenterScreen"  ShowInTaskbar="False" WindowState="Minimized" Visibility="Hidden" >
    <StackPanel x:Name="stackPanel" Margin="5,5,5,5">
        <DockPanel Margin="0,5,0,5">
            <Label>CCTV Flash disk:</Label>
            <Label Margin="0,0,0,5">Not Found</Label>
            <Label x:Name="backupPath"></Label>
        </DockPanel>
        <DockPanel Margin="0,0,0,0">
            <Button x:Name="button" Content="Click Me" Width="150" Height="40"/>
        </DockPanel>
        <DockPanel>
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox" Height="500"/>
        </DockPanel>
    </StackPanel>
</Window>
